<!--register.wxml-->
<view class="container">
  <form bindsubmit="bindFormSubmit">
    <view class="inputSection">
        <input name="studentId" placeholder="学号" auto-focus/>
    </view>
    <view class="inputSection">
        <input name="userName" placeholder="姓名"/>
    </view>
    <view class="inputSection">
        <input name="pwd" placeholder="密码" password/>
    </view>
    <view>
        <button formType="submit" class="submitBtn">注册</button>
    </view>
  </form>
</view>
