/* pages/user/user.wxss */
.container {
    width: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    padding-top: 10rpx;
    background-color: #e6e6e6;
}
.userinfo {
    width: 100%;
    padding: 20rpx;
    height: 168rpx;
    background-color: #fff;
}
.left-view {
    width: 20%;
    float: left;
}
.right-view {
    width: 80%;
    float: right;
    padding: 20rpx 60rpx;
    -webkit-box-sizing: border-box;
}
.userinfo-avatar {
  width: 168rpx;
  height: 168rpx;
}

.userinfo-studentid {
    margin-top: 10rpx;
    color: #aaa;
}
.bbs-sec, .error-sec, .grades-sec {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    padding: 0 30rpx;
    -webkit-box-sizing: border-box;
}
.grades-sec {
    margin-top: 50rpx;
    padding: 30rpx;
}
.sec-border {
    border-top: 1px solid #e6e6e6;
    padding: 30rpx 0;
}
.settings {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    padding: 30rpx;
    -webkit-box-sizing: border-box;
    margin-top: 150rpx;
    color: red;
}