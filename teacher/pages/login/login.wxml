<!--pages/login/login.wxml-->
<view class="container">
  <form bindsubmit="bindFormSubmit">
    <view class="inputSection">
        <input name="user" placeholder="账号" auto-focus/>
    </view>
    <view class="inputSection">
        <input name="pwd" placeholder="密码" password/>
    </view>
    <view>
        <button formType="submit" class="submitBtn">登录</button>
    </view>
    <view class="userRegister">
        <navigator url="../register/register" class="register-nav">没有账号，点击注册</navigator>
    </view>
  </form>
</view>