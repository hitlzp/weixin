/* pages/class/class.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.class-title {
    font-size: 18px;
    line-height: 26px;
}
.student-num {
    font-size: 14px;
    line-height: 20px;
    color: #a5aba6;
}
.scroll-view-item {
    height: 50px;
    margin-top: 10px;
    padding: 10px 20px;
    padding-bottom: 0;
    border-top: 1px solid #e6e6e6;
}
.com-btn {
    height: 30px;
    line-height: 30px;
    border-radius: 6px;
    background-color: #9acd32;
}
.inputSection {
    border-bottom: 1px solid #9acd32;
    margin-bottom: 20px;
}